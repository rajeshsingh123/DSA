
class GfG
{
    int maxLen(int arr[], int n)
    {
        int ssf=0;
        int ans=0;
        HashMap<Integer,Integer> map=new HashMap<>();
        map.put(0,-1);
        for(int i=0; i<arr.length; i++){
             ssf+=arr[i];
        
        if(map.containsKey(ssf)){
            ans=Math.max(ans,i-map.get(ssf));
        }else{
            map.put(ssf,i);
        }
        }
        return ans;
    }
}
